package milestone1.lecture6.assignment;
import java.util.*;

public class Pattern1 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int N = s.nextInt();
		
		for(int i = 1 ; i<= N ; i++) {
			int j = 1;
			while(j < N-i) {
				System.out.print(" ");
				j++;
			}
			while(j < N) {
				System.out.print(j);
				j++;
			}
			System.out.println();
		}

	}

}
