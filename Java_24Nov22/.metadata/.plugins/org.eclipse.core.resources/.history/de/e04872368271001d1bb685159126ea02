package base1;

import java.util.Scanner;

public class Trial {

	public static void main(String[] args) {
//		Scanner s = new Scanner(System.in);
//		int a = s.nextInt();
//		String str = s.next();
//		System.out.print(a);
//		System.out.println(str);
		int basic,allow;
		char grade;
		Scanner s = new Scanner(System.in);
		
		basic = s.nextInt();
		grade = s.next().charAt(0);
		System.out.println(grade);
		switch(grade){
			case 'A' :
				allow = 1700;
				break;
			case 'B' :
				allow = 1500;
				break;
			default :
				allow = 1300;
		}
		System.out.println(allow);
		System.out.print((int)(basic+ (0.59 * basic) + allow));
		
	}
}
