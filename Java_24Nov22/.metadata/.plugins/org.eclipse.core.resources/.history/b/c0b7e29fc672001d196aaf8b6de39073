package milestone1.lecture6.assignment;
import java.util.*;

public class Pattern4 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int N = s.nextInt();
		
		for(int i = 1 ; i<= N ; i++) {
			int j = 1;
			
			while(j <= (i%(N/2))) {
				System.out.print(' ');
			}
			while(j < N-(i%(N/2))) {
				System.out.print('*');
			}
		}

	}

}
